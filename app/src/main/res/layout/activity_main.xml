<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_h"
        android:text="height"

        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />

    <EditText
        android:id="@+id/edit_w"
        android:text="weight"

        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />

    <Button
        android:id="@+id/btn_cal"
        android:text="Calculate BMI"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edit_h"
        />

    <TextView
        android:id="@+id/txt_bmi"
        android:text="BMI result"

        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:layout_below="@+id/btn_cal"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/img"
        android:src="@drawable/blueRectangle"

        android:scaleType="centerCrop"

        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_bmi"
        />



</RelativeLayout>
